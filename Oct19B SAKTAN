https://www.codechef.com/OCT19B/problems/SAKTAN

#include<stdio.h>
int main(){
    int t;
    scanf("%d",&t);
    while(t){
      int n,m,q;
      scanf("%d%d%d",&n,&m,&q);
      int a[n][m];
      int l=2*q;
      int b[l];
      int i,j,k=0;
      for(i=0;i<l;i++){
        scanf("%d",&b[i]);
      }
      for(i=0;i<n;i++){
        for(j=0;j<m;j++){
          a[i][j]=0;
          //printf("%d",a[i][j]);
        }
        //printf("\n");
      }
      int p;
      while(q){
        p=b[k];
        for(int i=0;i<n;i++){
            a[i][p-1]=a[i][p-1]+1;
        }
        p=b[k+1];
        for(int j=0;j<m;j++){
          a[p-1][j]=a[p-1][j]+1;
        }
        k=k+2;
        q--;
      }
      int count=0;
      for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            if(a[i][j]%2!=0){
              count=count+1;
            }
           // printf("%d",a[i][j]);
          }
         // printf("\n");
        }
      printf("%d\n",count);
      t--;
    }
}
